<div class="card">
        <p style="color: green"><%= notice %></p>

        <h1>Tweets</h1>
        <div class="container  text-center">
            <div class="row  row-cols-auto">
              <div class="col">
                <%= form_with url: tweets_path, method: :get do |form| %>
                  <%= image_tag('searchc.svg', title: "Search Tweet" )%>
                  <%= form.text_field :query_text, placeholder: "Busqueda", title: "Seach Tweet", value: params[:query_text] %>
                  
                <% end %>
              </div>
              <div class="col">
                  <%= link_to image_tag('addc.svg'), new_tweet_path , title: "Add tweet"%>
              </div>
            </div>
        </div>

        <table class="table table-bordered border-primary">

          <thead>
            <tr>
              <th scope="col" style="width: 50px;" >Id</th>
              <th scope="col" style="width: 250px;">User </th>
              <th scope="col"style="width: 600px;">Tweet</th>
              <th scope="col"style="width: 50px;">Accion</th>
            </tr>
          </thead>

          <tbody>
            <% @tweets.each do |r| %>
                <tr>
                    <th scope="row"><%= r.id %></th>
                    <td><%= r.username%></td>
                    <td><%= r.description%></td>
                    <td> <%= link_to image_tag('view20.svg'), r , title: "View tweet" %> </td>
                </tr>
            <% end %>
            <tr> 
                    
                    <td colspan="4" >  
                          <div class="pag-bar">
                                <%== pagy_bootstrap_nav(@pagy) %>
                          </div>
                    </td>
            </tr>
          </tbody>
        </table>



</div>