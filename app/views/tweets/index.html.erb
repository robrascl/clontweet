<p style="color: green"><%= notice %></p>

<h1>Tweets</h1>
<div class="container  text-center">
    <div class="row  row-cols-auto">
      <div class="col">
        <%= form_with url: tweets_path, method: :get do |form| %>
          <%= image_tag('searchc.svg')%>
          <%= form.text_field :query_text, placeholder: "Busqueda", value: params[:query_text] %>
          
        <% end %>
      </div>
      <div class="col">
          <%= link_to image_tag('addc.svg'), new_tweet_path , title: "Add tweet"%>
      </div>
     </div>
</div>

<table class="table table-success table-striped">

  <thead>
    <tr>
      <th scope="col">id</th>
      <th scope="col">user </th>
      <th scope="col">tweet</th>
      <th scope="col">accion</th>
    </tr>
  </thead>

  <tbody>
    <% @tweets.each do |r| %>
        <tr>
            <th scope="row"><%= r.id %></th>
            <td><%= r.username%></td>
            <td><%= r.description%></td>
            <td> <%= link_to image_tag('view20.svg'), r , title: "View tweet" %> </td>
        </tr>
    <% end %>
  </tbody>
</table>

<div class="pag-bar mt-5 pt-5">
      <%== pagy_bootstrap_nav(@pagy) %>
</div>

